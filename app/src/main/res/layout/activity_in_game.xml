        android:id="@+id/newround"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:text="Continuar"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/burned"
        app:layout_constraintHorizontal_bias="0.675"
        app:layout_constraintStart_toStartOf="@+id/deck"
        app:layout_constraintTop_toBottomOf="@+id/tablecard5" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:width="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="583dp" />

    <TextView
        android:id="@+id/potLabel"
        android:layout_width="80dp"
        android:layout_height="19dp"
        android:text="Current pot:"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/burned"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/deck"
        app:layout_constraintTop_toTopOf="@+id/deck" />

    <TextView
        android:id="@+id/currentPot"
        android:layout_width="73dp"
        android:layout_height="23dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:width="100dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/burned"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toEndOf="@+id/deck"
        app:layout_constraintTop_toBottomOf="@+id/potLabel" />

