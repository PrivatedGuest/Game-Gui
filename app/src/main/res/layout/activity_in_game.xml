        android:src="@drawable/reverso"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <Button
        android:id="@+id/betbutton"
        android:layout_width="82dp"
        android:layout_height="88dp"
        android:text="BET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/personcard2" />

    <Button
        android:id="@+id/foldButton"
        android:layout_width="77dp"
        android:layout_height="88dp"
        android:text="No bet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/betbutton"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toEndOf="@+id/personcard2" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="69dp"
        android:layout_height="101dp"
        android:text="Back "
        android:textColorHint="#00FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cartasendeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
