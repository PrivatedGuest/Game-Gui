        android:textColor="#070505"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/burned"
        app:layout_constraintStart_toStartOf="@+id/burned"
        app:layout_constraintTop_toTopOf="@+id/burned" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="409dp"
